---
import Layout from '../layouts/Layout.astro';
import { grupos } from '../data/infoGrupos'; // Importamos los datos
---

<Layout title="Selecciona tu Agente">
  <main class="min-h-screen bg-slate-950 text-white p-10">
    <h1 class="text-4xl font-extrabold text-center mb-10 text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">
      Elige tu Agente
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {grupos.map((grupo) => (
        <a 
          href={`/chat/${grupo.id}`} 
          class="block group relative p-6 bg-slate-900 rounded-xl border border-slate-800 hover:border-purple-500 transition-all hover:-translate-y-2 hover:shadow-purple-500/20 hover:shadow-xl"
        >
          <div class={`absolute top-0 right-0 w-20 h-20 ${grupo.color} blur-3xl opacity-20 rounded-full`}></div>
          
          <h2 class="text-2xl font-bold mb-2 text-white group-hover:text-purple-300">
            {grupo.nombre}
          </h2>
          <p class="text-gray-400">
            {grupo.descripcion}
          </p>
          <div class="mt-4 text-sm text-purple-400 font-semibold flex items-center gap-2">
            Iniciar Chat <span>â†’</span>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>
