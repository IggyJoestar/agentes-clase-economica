---
import Layout from '../layouts/Layout.astro';
import { grupos } from '../data/infoGrupos';
---

<Layout title="Selecciona tu Agente">
  <main class="min-h-screen bg-slate-950 text-white p-8 flex flex-col items-center justify-center">
    
    <div class="text-center mb-16 space-y-4">
      <h1 class="text-5xl pb-2.5  md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-cyan-500 drop-shadow-lg">
        Primeros agentes de Redacción Web
      </h1>
      <p class="text-slate-400 text-lg">Selecciona uno para conversar</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl w-full">
      {grupos.map((grupo) => (
        <div class="relative group">
          
          {/* --- TARJETA PRINCIPAL --- */}
          <div class="h-full relative flex flex-col items-center bg-slate-900/50 backdrop-blur-sm rounded-3xl border border-slate-800 p-8 transition-all duration-500 group-hover:bg-slate-900 group-hover:border-cyan-500/50 group-hover:shadow-[0_0_50px_rgba(168,85,247,0.15)] group-hover:-translate-y-2">
            
            {/* Efecto de luz detrás del personaje */}
            <div class={`absolute top-0 inset-x-0 h-40 ${grupo.color} opacity-10 blur-3xl rounded-t-3xl group-hover:opacity-20 transition-opacity`}></div>

            {/* --- AVATAR DEL PERSONAJE (Grande y centrado) --- */}
            <div class="relative mb-6 transform transition-transform duration-500 group-hover:scale-110">
              <div class={`absolute inset-0 ${grupo.color} blur-md opacity-0 group-hover:opacity-50 rounded-full transition-opacity duration-500`}></div>
              <img 
                src={grupo.avatar} 
                alt={grupo.nombre} 
                class="relative w-40 h-40 rounded-full object-cover border-4 border-slate-800 shadow-2xl group-hover:border-white transition-colors"
              />
              {/* Badge de estado (opcional) */}
              <div class="absolute bottom-2 right-2 w-5 h-5 bg-green-500 border-4 border-slate-900 rounded-full"></div>
            </div>

            {/* --- INFO DEL PERSONAJE --- */}
            <h2 class="text-3xl font-black text-white mb-3 text-center group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-white group-hover:to-teal-200 transition-all">
              {grupo.nombre}
            </h2>

            <p class="text-slate-400 text-center text-sm leading-relaxed mb-8 line-clamp-3">
              {grupo.descripcion}
            </p>

            {/* Botón visual (La tarjeta entera es el click, pero esto ayuda visualmente) */}
            <span class="mt-auto px-6 py-2 rounded-full bg-slate-800 text-cyan-400 font-bold text-sm border border-slate-700 group-hover:bg-cyan-600 group-hover:text-white group-hover:border-cyan-500 transition-all">
              CHAT
            </span>

            {/* --- ENLACE AL CHAT (Cubre toda la tarjeta excepto el footer) --- */}
            <a href={`/chat/${grupo.id}`} class="absolute inset-0 z-10 rounded-3xl" aria-label={`Hablar con ${grupo.nombre}`}></a>

            {/* --- SECCIÓN DEL CREADOR (Footer) --- */}
            <div class="mt-8 pt-4 border-t border-slate-800 w-full flex flex-col items-center relative z-20">
              <p class="text-xs text-slate-500 uppercase tracking-widest font-semibold mb-1">Creado por</p>
              
              {/* Enlace a LinkedIn (z-index mayor para que funcione el click) */}
              <a 
                href={grupo.linkedin} 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-slate-300 hover:text-blue-400 transition-colors cursor-pointer"
              >
                <span class="font-medium">{grupo.creador}</span>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>

          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
